{
  "exclude": ["client"],
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext"],
    "declaration": true,
    "outDir": "../dist",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  }
}
